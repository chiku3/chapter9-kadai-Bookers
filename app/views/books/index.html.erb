<h1>Books</h1>
<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </thead>
  <tbody>
    <tr>
      <% @books.each do |book|%>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <% end %>
    </tr>
  </tbody>
</table>

<h1>New book</h1>
<%= form_with model:@book,local:true do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit "Create Book" %>

<% end %>