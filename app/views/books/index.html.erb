<div class="index-notice">
<% if flash[:notice] %>
<p>
  <%= notice %>
</p>
<% end %>
</div>


<h1 class="index-top">Books</h1>
<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show",book_path(book) %></td>
      <td><%= link_to "Edit",edit_book_path(book) %></td>
      <td><%= link_to "Destroy",book_path(book),method: :delete,data:{confirm:"Are you sure?"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h1 class="new-top">New book</h1>


<% if @book.errors.any? %>
<div class="errors">
 <div class="error-title">
 <%= @book.errors.count %> errors prohibited this book from being saved:
 </div>
 <ul class="error-message">
 <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
 <% end %>
 </ul>
</div>
<% end %>

<div class="new-form">
<%= form_with model:@book,local:true do |f| %>

<div class="new-title">
<h4>Title</h4>
<%= f.text_field :title %>
</div>

<div class="new-body">
<h4>Body</h4>
<%= f.text_area :body %><br>
</div>

<%= f.submit "Create Book" %>

<% end %>
</div>